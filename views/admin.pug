extends layout

block content
	div( class = "content" )
		h1 Admin Login

		form( action = "/admin" method = "post" )
			label( for = "user-input" ) Username
			input( class = "u-full-width" name = "u" type = "text" id = "user-input" )

			label( for = "pass-input" ) Password
			input( class = "u-full-width" name = "p" type = "password" id = "pass-input" )

			input( class = "button-primary" type = "submit" value = "Login" )